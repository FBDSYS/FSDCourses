# 初认识JavaScript
<body>
  <div id="big">
    我是
  </div>
  <script type="text/javascript">
    document.write("xiupi酱")
    document.getElementById('big').style.fontSize='25px'
    document.getElementById('big').style.color='red'
 </script>
</body>
# 引入JavaScript
<script type="text/javascript" src="main.js"></script>
document.write('xiupi酱')
alert('上当了')
# JS调用一个函数
<!DOCTYPE html>
<head>
 <title>JS调用一个函数</title>
   <script type="text/javascript" src="main.js"></script>
</head>
<body>
  A.<input type="button" name="EN" value="非常好" onclick="feichanghao()">
  B.<input type="button" name="EN" value="一般好" onclick="yibanhao()">
  C.<input type="button" name="EN" value="很不好">
</body>
</html>
function feichanghao(){
  document.write('我觉得非常好')
  alert('很棒')
}
function yibanhao(){
  alert('为什么不点非常好')
  alert('点非常好')
  alert('点吧')
}
# 来一次交互吧 
<!DOCTYPE html>
<head>
 <title>JS调用一个函数</title>
   <script type="text/javascript" src="main.js"></script>
</head>
<body>
<input type="button" value="来一次互动吧！" onclick="canyu()">
</body>
</html>
function canyu(){
  var banding=confirm('你觉得不是吗？')
  if(banding==true){
    document.write('你很棒')
  }
  else{
    document.write('加油')
  };
}
# 将字号图片放大
<!DOCTYPE html>
<head>
 <title>将字号图片放大</title>
   <script type="text/javascript" src="main.js"></script>
</head>
<body>
  <img src="http://obasals2h.bkt.clouddn.com/hw_bg2.png" alt="图片" style="border:none;width:300px;height:300px" />
 <input type="button" name="name" value="放大图片">
 <h1>文字</h1>
 <p>
   可以控制视窗播放器开、关、待机以及播放视频文件。
 </p>
  <input type="button" name="name" value="文字放大">
</body>
</html>
